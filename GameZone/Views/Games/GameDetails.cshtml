@model Game
@{
    ViewData["Title"] = "Game Details";
}
<div class="container border-dark border border-2" style="height:450px">
    <div class="row p-3">

        <div class="col-md-6">
            <div>
                <h3>@Model.Name</h3>
            </div>
            <div>
                <h4>Description: </h4>
                <p>@Model.Description</p>
            </div>
            <div>
                <h4>Category: </h4>
                <h5>@Model.Category?.Name</h5>
            </div>
            <h4>Supported Devices: </h4>
            @foreach (var device in Model.Devices)
            {
                <div>
                    <h5 class="d-inline-block">@device.Device.Name</h5>
                    <i class="@device.Device.Icon"></i>
                </div>
            }
        </div>
        <div class="col-md-6">
            <img style="height:400px;width:500px"  src="@string.Format("/Uploads/Images/{0}",Model.CoverName)" />
        </div>
    </div>
</div>